<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog Page</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImage %>" width="800px" />
        <pre class="mt-3"><%= blog.content %></pre>
    </div>

    <div class="container mt-4" >
        <img src="<%= blog.createdBy.profileImage %>" width="80px"/>
        <%= blog.createdBy.fullName %>
    </div>

    <!-- Coomment handling div -->
    <div class="container mt-3"> 
        <h1>Comments (<%= comments.length %>)</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                    <input 
                      type="text"
                      name="comment" 
                      class="form-control" 
                      placeholder="Enter your thoughts here"
                    />
                    <button class="btn btn-sn btn-primary mt-3">Add comment</button>
                </div>
            </form>
            <div class="mt-3">
                <% comments.forEach(comment => { %>
                 <div>
                    <img src="<%= comment.createdBy.profileImage %>" width="30px"/>
                    <%= comment.createdBy.fullName %>
                    <pre><%= comment.comment %></pre>
                 </div>
                <% }) %>
            </div>
        <% } %>
    </div>
    <%- include('./partials/scripts') %>
</body>
</html>