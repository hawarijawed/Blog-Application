<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home Page</title>
</head>
<body>
    <%- include('./partials/nav') %>
    
    <div class="container mt-3 row row-cols-4">
        <% blogs.forEach(blog => { %>
            <div class="col">
                <div class="card col" >
                    <img src="<%= blog.coverImage %>" class="card-img-top" alt="..." width="800px"/>
                    <div class="card-body">
                        <h5 class="card-title"><%= blog.title %></h5>
                        <!-- <p class="card-text"><%= blog.content %>.</p> -->
                        <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

    <%- include('./partials/scripts') %>
</body>
</html>